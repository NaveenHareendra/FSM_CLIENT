<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminDashboard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="280dp"
                android:background="@drawable/leaves"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view2"
                android:layout_width="320dp"
                android:layout_height="150dp"
                android:layout_marginTop="220dp"
                android:background="@drawable/clientdashboardtiles"
                android:elevation="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/view" />

            <View
                android:id="@+id/viewNewTask"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/cat_background"
                android:elevation="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <View
                android:id="@+id/viewMyTasks"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/cat_background"
                android:elevation="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <View
                android:id="@+id/viewSearchTask"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/cat_background"
                android:elevation="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewNewTask" />

            <View
                android:id="@+id/viewMyTrack"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/cat_background"
                android:elevation="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewMyTasks" />

            <TextView
                android:id="@+id/textViewUserWelcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="'"
                android:textColor="@color/green_leaves1"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="Dream big, organize small, and let your tasks lead to your rise above all."
                android:textColor="@color/green_leaves1"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewUserWelcomeText" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/farmer"
                app:layout_constraintBottom_toTopOf="@+id/textView7"
                app:layout_constraintStart_toEndOf="@+id/textViewUserWelcomeText" />

            <TextView
                android:id="@+id/textViewcreatetask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="5.1dp"
                android:text="Registered FO"
                android:textColor="#663300"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/viewNewTask"
                app:layout_constraintEnd_toEndOf="@+id/viewNewTask"
                app:layout_constraintStart_toStartOf="@+id/viewNewTask" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="5.1dp"
                android:text="Analytics"
                android:textColor="#663300"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/viewSearchTask"
                app:layout_constraintEnd_toEndOf="@+id/viewSearchTask"
                app:layout_constraintStart_toStartOf="@+id/viewSearchTask" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="5.1dp"
                android:text="Reports"
                android:textColor="#663300"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/viewMyTrack"
                app:layout_constraintEnd_toEndOf="@+id/viewMyTrack"
                app:layout_constraintStart_toStartOf="@+id/viewMyTrack" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="75dp"
                android:layout_height="68dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/baseline_library_add_24_white"
                android:elevation="5.1dp"
                app:layout_constraintEnd_toEndOf="@+id/viewNewTask"
                app:layout_constraintStart_toStartOf="@+id/viewNewTask"
                app:layout_constraintTop_toTopOf="@+id/viewNewTask" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/baseline_analytics_24_white"
                android:elevation="5.1dp"
                app:layout_constraintEnd_toEndOf="@+id/viewSearchTask"
                app:layout_constraintStart_toStartOf="@+id/viewSearchTask"
                app:layout_constraintTop_toTopOf="@+id/viewSearchTask" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/reports"
                android:elevation="5.1dp"
                app:layout_constraintEnd_toEndOf="@+id/viewMyTrack"
                app:layout_constraintStart_toStartOf="@+id/viewMyTrack"
                app:layout_constraintTop_toTopOf="@+id/viewMyTrack" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="5.1dp"
                android:text="Task Board"
                android:textColor="#663300"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/viewMyTasks"
                app:layout_constraintEnd_toEndOf="@+id/viewMyTasks"
                app:layout_constraintStart_toStartOf="@+id/viewMyTasks" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/baseline_ballot_24_white"
                android:elevation="5.1dp"
                app:layout_constraintEnd_toEndOf="@+id/viewMyTasks"
                app:layout_constraintStart_toStartOf="@+id/viewMyTasks"
                app:layout_constraintTop_toTopOf="@+id/viewMyTasks" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutTasks"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8AC0C0C0"
                android:elevation="5.5dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:drawableRight="@drawable/baseline_arrow_right_alt_24"
                android:drawablePadding="5dp"
                android:elevation="5.1dp"
                android:text="Show On Map"
                android:textColor="#663300"
                android:textSize="22sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/view2"
                app:layout_constraintEnd_toEndOf="@+id/view2" />

            <ImageView
                android:id="@+id/imageViewGoogleCalendar"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_marginTop="-25dp"
                android:background="@drawable/analysis"
                android:elevation="5.01dp"
                app:layout_constraintEnd_toEndOf="@+id/view2"
                app:layout_constraintStart_toStartOf="@+id/view2"
                app:layout_constraintTop_toTopOf="@+id/view2" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigationView"
        app:headerLayout="@layout/header_menu"
        app:menu="@menu/main_menu"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"
        tools:ignore="VisualLintBounds">
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>
